
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters-random
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (comma-separated URLs)
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Email Configuration (SMTP)
# Pour Gmail: Activer validation 2 étapes puis générer "Mot de passe d'application"
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre-email@gmail.com
SMTP_PASS=xxxx-xxxx-xxxx-xxxx
EMAIL_FROM=noreply@olympia-hr.tn

# Alternative: SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=SG.xxxxxxxxxxxxx

# Alternative: Mailtrap (Development only)
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_USER=your-mailtrap-username
# SMTP_PASS=your-mailtrap-password

# ML Service Configuration
ML_SERVICE_URL=http://localhost:5001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# Tunisian Legal Constants
CNSS_EMPLOYEE_RATE=0.0918
CNSS_EMPLOYER_RATE=0.1657
CSS_RATE=0.005
MIN_ANNUAL_LEAVE_DAYS=25
MATERNITY_LEAVE_DAYS=90

# Optional Features
ENABLE_ML_PREDICTIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUDIT_LOGS=true
